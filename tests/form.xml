<?xml version="1.0" encoding="ISO-8859-1" ?>
<view>
	<panel id="form">
		<resize>1</resize>
		<title>Input Panel</title>
		<form id="myform">
			<title>Mitarbeiter</title>
			 <fieldset id="Daten">
				<title>Daten</title>
				<input id="name">
					<type>Text</type>				
					<class>myclass</class>
					<label>Nachname</label>
					<bind>name</bind>
					<size>30</size>
					<tooltip>Das ist ein Name</tooltip>
				</input>
				
				<input id="age">
					<type>Number</type>				
					<class>myclass</class>
					<bind>Alter</bind>
					<size>5</size>
					<tooltip>Werte von 0-99</tooltip>
				</input>
				
				<input id="address">
					<type>Text</type>
					<class>myclass</class>
					<bind>adress</bind>
					<size>60</size>
					<tooltip>Anschrift</tooltip>
				</input>

				<input id="birthday">
					<type>Date</type>
					<class>myclass</class>
					<bind>birthday</bind>
					<size>60</size>
					<tooltip>Geburtsdatum dd/mm/yyyy</tooltip>
				</input>				


				<input id="country">
					<type>Collection</type>
					<mode>single|multi</mode>
					<style>radio|checkbox|select|boxes</style>
					<class>myclass</class>
					<value>countries</value>
					<bind>country</bind>
					<size>60</size>
					<tooltip>Geburtsdatum dd/mm/yyyy</tooltip>
				</input>				
												
				<button id="create">
					<label>Anlegen</label>
					<tooltip>Hit to Create</tooltip>
				</button>
			</fieldset>
		</form>
	</panel>
</view>