<?xml version="1.0" encoding="ISO-8859-1" ?>
<view>
	<tabbedPanel id="myTabbedPanel">
		<title>Tab Panel Demo</title>
		<closable>1</closable>

		<panel id="form">
			<resize>1</resize>
			<title>Input Panel</title>
			<form id="myform">
				<layout>
					<type>Grid/Border/Flow/Box</type>
					<align>left/right/center</align>
					<section>north/west/east/south</section>
					<dimension>1,1</dimension>
				</layout>
				<title>Der Titel</title>
				 <fieldset id="Daten">
					<title>Daten</title>
					<input id="name">
						<type>Text</type>				
						<class>myclass</class>
						<bind>name</bind>
						<size>30</size>
						<tooltip>Das ist ein Name</tooltip>
					</input>
					
					<input id="age">
						<type>Number</type>				
						<class>myclass</class>
						<bind>Alter</bind>
						<size>5</size>
						<tooltip>Werte von 0-99</tooltip>
					</input>
					
					<input id="address">
						<type>Text</type>
						<class>myclass</class>
						<bind>adress</bind>
						<size>60</size>
						<tooltip>Anschrift</tooltip>
					</input>
	
					<input id="birthday">
						<type>Date</type>
						<class>myclass</class>
						<bind>birthday</bind>
						<size>60</size>
						<tooltip>Geburtsdatum dd/mm/yyyy</tooltip>
					</input>				
	
	
					<input id="country">
						<type>Collection</type>
						<mode>single|multi</mode>
						<style>radio|checkbox|select|boxes</style>
						<class>myclass</class>
						<value>countries</value>
						<bind>country</bind>
						<size>60</size>
						<tooltip>Geburtsdatum dd/mm/yyyy</tooltip>
					</input>				
													
					<button id="create">
						<label>Anlegen</label>
						<tooltip>Hit to Create</tooltip>
					</button>
				</fieldset>
			</form>
		</panel>

		<panel id="text">
			<title>Text Panel</title>
			<text>
				Das ist ein Test
			</text>
		</panel>

		<panel id="table">
			<title>Table Panel</title>
			<table>
				<row id="line">
					<column id="name">
					</column>
				</row>
			</table>
		</panel>								
	</tabbedPanel>
</view>